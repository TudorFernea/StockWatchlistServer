<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/LightPurple">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/PalePurple"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="303dp"
                android:layout_height="match_parent"
                android:background="@color/PalePurple"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/symbolID"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/font4bold"
                    android:paddingLeft="20dp"
                    android:text="@string/symbol"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    tools:paddingLeft="20dp" />

                <TextView
                    android:id="@+id/sell_priceID"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/font4bold"
                    android:paddingLeft="20dp"
                    android:text="@string/sell_price"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/buy_priceID"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/font4bold"
                    android:paddingLeft="20dp"
                    android:text="@string/buy_price"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="97dp"
                android:layout_height="92dp"
                android:background="@color/PalePurple"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/editButton"
                    android:layout_width="49dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/editButton"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    app:srcCompat="@drawable/edit_button" />

                <ImageView
                    android:id="@+id/deleteButton"
                    android:layout_width="49dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/deleteButton"
                    android:paddingRight="2dp"
                    android:paddingBottom="2dp"
                    app:srcCompat="@drawable/delete_button" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>